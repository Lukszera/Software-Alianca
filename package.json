{
  "name": "alianca-software",
  "productName": "Alianca Software",
  "version": "1.0.0",
  "description": "Sistema de gerenciamento de estoque - Alianca Software",
  "author": "Lucas Ulbrich Franco <luulbrichfranco@gmail.com>",
  "main": "main.js",
  "dependencies": {
    "pg": "^8.0.0"
  },
  "build": {
    "appId": "com.suaempresa.alianca",
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "node_modules/pg/**"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "imagens/icone.ico"
    },
    "directories": {
      "output": "dist"
    }
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron-builder": "^25.1.8"
  }
}
