{
  "name": "alianca-software",
  "productName": "Alianca Software",
  "version": "1.0.0",
  "description": "Sistema de gerenciamento de estoque - Alianca Software",
  "author": "Lucas Ulbrich Franco <luulbrichfranco@gmail.com>",
  "license": "MIT",
  "main": "main.js",
  "build": {
    "appId": "com.alianca.software",
    "files": [
      "**/*",
      "!dist/**",
      "!scripts/**",
      "!.git/**"
    ],
    "asarUnpack": [
      "node_modules/pg/**"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "imagens/icone.ico"
    },
    "directories": {
      "output": "dist"
    }
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64"
  },
  "dependencies": {
    "pg": "^8.16.3",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12"
  }
}
